<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 从无到有 -->
    <scale
        android:duration="400"
        android:fromXScale="0"
        android:fromYScale="0"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toXScale="1"
        android:toYScale="1" />
    <!-- 透明度:从0到1 -->
    <alpha
        android:duration="400"
        android:fromAlpha="0"
        android:toAlpha="1" />

</set>