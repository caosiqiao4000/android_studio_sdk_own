<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layoutlayout_top"
    android:layout_width="280dip"
    android:layout_height="wrap_content"
    android:background="@drawable/sh_confirm_dialog_bg2"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dip"
        android:text="确认对话框"
        android:textColor="@color/sh_gray_default"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@color/sh_image_bg_color" />

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="5dip"
        android:gravity="center_horizontal"
        android:text="小标题"
        android:textColor="@color/sh_gray_default"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_notice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="15dip"
        android:text="下次不再提示下次不再提示下次不再提示下次不再提示下次不再提示下次不再提示下次不再提示下次不再提示下次不再提示下次不再提示下次不再提示下次不再提示"
        android:layout_weight="1"
        android:textColor="@color/sh_gray_default"
        android:textSize="16sp" />

    <include layout="@layout/sh_bottom_btn" />

</LinearLayout>