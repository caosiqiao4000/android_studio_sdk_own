<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sq_data_rl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <DatePicker
        android:id="@+id/sq_data_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:minDate="01/01/1950" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sq_data_dp"
        android:layout_below="@+id/sq_data_dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sq_data_btn_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_bg_btn"
            android:text="@string/sq_sure" />

        <Button
            android:id="@+id/sq_data_btn_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_bg_btn"
            android:text="@string/sq_cancle" />
    </LinearLayout>

</RelativeLayout>